    "components": {
        "schemas": {
            "StatusResponseDto": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "status": {
                        "type": "number"
                    }
                },
                "required": ["message", "status"]
            },
            "VerifyCodeDto": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "number"
                    }
                },
                "required": ["code"]
            },
            "UserDto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "description": "User's ID"
                    },
                    "firstName": {
                        "type": "string",
                        "description": "User's first name"
                    },
                    "lastName": {
                        "type": "string",
                        "description": "User's last name"
                    },
                    "avatar": {
                        "type": "string",
                        "description": "User's profile picture"
                    },
                    "birthDate": {
                        "type": "string",
                        "description": "User's birth date"
                    },
                    "email": {
                        "type": "string",
                        "description": "User's email"
                    },
                    "createdAt": {
                        "type": "string",
                        "description": "Date and time when the user was created"
                    }
                },
                "required": ["firstName", "lastName", "birthDate", "email"]
            },
            "LoginResponseDto": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    },
                    "userId": {
                        "type": "number"
                    },
                    "expiresIn": {
                        "type": "number"
                    },
                    "expirationDate": {
                        "type": "string"
                    }
                },
                "required": ["token", "userId"]
            },
            "EmailDto": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    }
                },
                "required": ["email"]
            },
            "LanguageChangeDto": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "number",
                        "description": "ID of the user who's changing the language"
                    },
                    "languageCode": {
                        "type": "string",
                        "enum": ["en", "hr"],
                        "description": "Language code"
                    }
                },
                "required": ["userId", "languageCode"]
            },
            "PreferencesDto": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "number",
                        "description": "User ID"
                    },
                    "languageCode": {
                        "type": "string",
                        "enum": ["en", "hr"],
                        "description": "Code of the language"
                    }
                },
                "required": ["userId", "languageCode"]
            }
        }
    }
