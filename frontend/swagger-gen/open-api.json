    "servers": [],
    "components": {
        "schemas": {
            "StatusResponseDto": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "status": {
                        "type": "number"
                    }
                },
                "required": ["message", "status"]
            },
            "VerifyCodeDto": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "number"
                    }
                },
                "required": ["code"]
            },
            "UserDto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "description": "User's ID"
                    },
                    "firstName": {
                        "type": "string",
                        "description": "User's first name"
                    },
                    "lastName": {
                        "type": "string",
                        "description": "User's last name"
                    },
                    "avatar": {
                        "type": "string",
                        "description": "User's profile picture"
                    },
                    "birthDate": {
                        "type": "string",
                        "description": "User's birth date"
                    },
                    "email": {
                        "type": "string",
                        "description": "User's email"
                    },
                    "createdAt": {
                        "type": "string",
                        "description": "Date and time when the user was created"
                    }
                },
                "required": ["firstName", "lastName", "birthDate", "email"]
            },
            "LoginResponseDto": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    },
                    "userId": {
                        "type": "number"
                    },
                    "expiresIn": {
                        "type": "number"
                    },
                    "expirationDate": {
                        "type": "string"
                    }
                },
                "required": ["token", "userId"]
            },
            "EmailDto": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    }
                },
                "required": ["email"]
            },
            "LanguageChangeDto": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "number",
                        "description": "ID of the user who's changing the language"
                    },
                    "languageCode": {
                        "type": "string",
                        "enum": ["en", "hr"],
                        "description": "Language code"
                    }
                },
                "required": ["userId", "languageCode"]
            },
            "PreferencesDto": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "number",
                        "description": "User ID"
                    },
                    "languageCode": {
                        "type": "string",
                        "enum": ["en", "hr"],
                        "description": "Code of the language"
                    }
                },
                "required": ["userId", "languageCode"]
            },
            "RecommendedCarsDto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "description": "Car ID"
                    },
                    "brand": {
                        "type": "string",
                        "description": "Car brand"
                    },
                    "kilometersTravelled": {
                        "type": "number",
                        "description": "Kilometers travelled since the first registration date"
                    },
                    "price": {
                        "type": "number",
                        "description": "Car suggested price"
                    },
                    "firstRegistrationDate": {
                        "type": "string",
                        "description": "Date on which the car is registered for the first time"
                    },
                    "modelName": {
                        "type": "string",
                        "description": "Car model name"
                    },
                    "countryOrigin": {
                        "type": "string",
                        "description": "Country from which the car originates"
                    },
                    "noOfPreviousOwners": {
                        "type": "number",
                        "description": "Number of previous owners"
                    },
                    "sellerType": {
                        "type": "string",
                        "enum": ["Dealer", "Private", "CompanyVehicle"],
                        "description": "Seller type"
                    },
                    "currencySymbol": {
                        "type": "string",
                        "description": "Currency symbol"
                    },
                    "images": {
                        "description": "Car images",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "id",
                    "brand",
                    "kilometersTravelled",
                    "price",
                    "firstRegistrationDate",
                    "modelName",
                    "countryOrigin",
                    "noOfPreviousOwners",
                    "sellerType",
                    "currencySymbol",
                    "images"
                ]
            },
            "CarDetailsDto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "description": "ID"
                    },
                    "brand": {
                        "type": "string",
                        "description": "Brand"
                    },
                    "kilometersTravelled": {
                        "type": "number",
                        "description": "How many kilometers travelled"
                    },
                    "price": {
                        "type": "number",
                        "description": "Price"
                    },
                    "firstRegistrationDate": {
                        "type": "string",
                        "description": "First registration date"
                    },
                    "releaseDate": {
                        "type": "string",
                        "description": "Date on which the model has been released to the public"
                    },
                    "modelName": {
                        "type": "string",
                        "description": "Model name"
                    },
                    "countryOrigin": {
                        "type": "string",
                        "description": "Country origin"
                    },
                    "noOfPreviousOwners": {
                        "type": "number",
                        "description": "Number of previous car owners"
                    },
                    "transmission": {
                        "type": "string",
                        "enum": ["Manual", "Automatic"],
                        "description": "Type of transmission"
                    },
                    "fuelType": {
                        "type": "string",
                        "enum": ["Gasoline", "Diesel"],
                        "description": "Fuel type"
                    },
                    "color": {
                        "type": "string",
                        "description": "Color"
                    },
                    "bodyKit": {
                        "type": "string",
                        "description": "Bodykit"
                    },
                    "horsePower": {
                        "type": "number",
                        "description": "How many horse power does the car have"
                    },
                    "kilowatts": {
                        "type": "number",
                        "description": "How many kilowatts does the car have"
                    },
                    "fuelConsumption": {
                        "type": "number",
                        "description": "How much fuel does the car consumes"
                    },
                    "co2Emissions": {
                        "type": "number",
                        "description": "How many C02 emissions does the car have"
                    },
                    "numberOfCylinders": {
                        "type": "number",
                        "description": "How many cylinders does the car have"
                    },
                    "rimSize": {
                        "type": "number",
                        "description": "How much the car rim size is"
                    },
                    "sellerType": {
                        "type": "string",
                        "enum": ["Dealer", "Private", "CompanyVehicle"],
                        "description": "Seller type"
                    },
                    "uploadedDate": {
                        "type": "string",
                        "description": "Uploaded date"
                    },
                    "bodyStyle": {
                        "type": "string",
                        "enum": ["Convertible", "Coupe", "Sedan", "SUV", "Hatchback"],
                        "description": "Body style"
                    },
                    "wheelDriveType": {
                        "type": "string",
                        "enum": [
                            "AllWheelDrive",
                            "FrontWheelDrive",
                            "RearWheelDrive",
                            "FourWheelDrive"
                        ],
                        "description": "Wheel drive type"
                    },
                    "currencySymbol": {
                        "type": "string",
                        "description": "Currency code"
                    },
                    "images": {
                        "description": "Images",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "id",
                    "brand",
                    "kilometersTravelled",
                    "price",
                    "firstRegistrationDate",
                    "releaseDate",
                    "modelName",
                    "countryOrigin",
                    "noOfPreviousOwners",
                    "transmission",
                    "fuelType",
                    "color",
                    "bodyKit",
                    "horsePower",
                    "kilowatts",
                    "fuelConsumption",
                    "co2Emissions",
                    "numberOfCylinders",
                    "rimSize",
                    "sellerType",
                    "uploadedDate",
                    "bodyStyle",
                    "wheelDriveType",
                    "currencySymbol",
                    "images"
                ]
            },
            "PaginationDto": {
                "type": "object",
                "properties": {
                    "page": {
                        "type": "number",
                        "title": "Current page"
                    },
                    "perPage": {
                        "type": "number",
                        "title": "Per page"
                    },
                    "count": {
                        "type": "number",
                        "title": "Total count of results"
                    }
                },
                "required": ["page", "perPage", "count"]
            }
        }
    }
